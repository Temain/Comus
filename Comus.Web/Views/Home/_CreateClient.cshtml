        <div id="register-wraper">
            <form id="register-form" class="form">
                <legend>Новый клиент</legend>

                <div class="body">
                    <label for="name">Организация</label>
                    <input class="input-huge" id="company" data-bind="value: company">

                    <label for="phone">Номер телефона</label>
                    <input id='phone' class="input-huge" data-bind="value: phone" />

                    <label for="surname">Интересующая продукция</label>
