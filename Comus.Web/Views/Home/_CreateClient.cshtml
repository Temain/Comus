                        <option>Радионов Сергей Петрович</option>
                    </select>

                    <label>Статус</label>
                    <select class="input-huge">
                        @*<option></option>*@
                        <option>Актуальный</option>
                        <option>Неактуальный</option>
                        <option>Перезвонить позже</option>
                        <option>Радионов Сергей Петрович</option>
                    </select>

                    <label>Комментарий</label>
                    <input class="input-huge" id="lastName">
                </div>

                <div class="footer" style="margin-top: 1em;">
                    @*<label class="checkbox inline">
                        <input type="checkbox" id="inlineCheckbox1" value="option1"> I agree with the terms &amp; conditions
                    </label>*@
                    <button type="submit" data-bind="click: save" class="btn btn-success">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>


