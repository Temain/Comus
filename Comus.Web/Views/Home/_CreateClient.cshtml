<link href="~/Content/register.css" rel="stylesheet" />

<div class="row">
    <div class="col-sm-offset-3 col-sm-6 col-lg-6">
        <div id="register-wraper">
            <form id="register-form" class="form">
                <legend>Новый клиент</legend>

                <div class="body">
                    <label for="company">Организация</label>
                    <input id="company" class="input-huge form-control" data-bind="value: company" placeholder="Введите наименование...">

                    <label for="lastName">ФИО конт. лица</label>
                    <input id="lastName" class="input-huge form-control" data-bind="value: lastName" placeholder="Введите фамилию...">
                    <input class="input-huge form-control" data-bind="value: firstName" placeholder="Введите имя...">
                    <input class="input-huge form-control" data-bind="value: middleName" placeholder="Введите отчество...">

                    <label for="phone">Номер телефона</label>
                    <input id='phone' class="input-huge form-control" data-bind="value: phone" placeholder="x (xxx) xxx-xx-xx"/>

                    <label for="productType">Интересующая продукция</label>
                    <select id="productType" class="input-huge form-control" data-bind="options: productTypes,
                       optionsText: 'productTypeName',
                       optionsValue: 'productTypeId',
                       value: productTypeId,
                       optionsCaption: ''"></select>

                    <label for="clientSource">Источник обращения</label>
                    <select id="clientSource" class="input-huge form-control" data-bind="options: clientSources,
                       optionsText: 'clientSourceName',
                       optionsValue: 'clientSourceId',
                       value: clientSourceId,
                       optionsCaption: ''"></select>

                    <label for="employee">Ответственный менеджер</label>
                    <select id="employee" class="input-huge form-control" data-bind="options: employees,
                       optionsText: 'employeeFullName',
                       optionsValue: 'employeeId',
                       value: employeeId,
                       optionsCaption: ''"></select>

                    <label for="clientStatus">Статус</label>
                    <select id="clientStatus" class="input-huge form-control" data-bind="options: clientStatuses,
                       optionsText: 'clientStatusName',
                       optionsValue: 'clientStatusId',
                       value: clientStatusId,
                       optionsCaption: ''"></select>

                    <label for="comment">Комментарий</label>
                    <input id="comment" class="input-huge form-control" data-bind="value: comment" placeholder="Введите комментарий...">
                </div>

                <div class="footer" style="margin-top: 1em;">
                    <button type="submit" data-bind="click: save" class="btn btn-success">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>


