<link href="~/Content/table.css" rel="stylesheet">
<link href="~/Content/Site.css" rel="stylesheet" />
<div class="heading">
    <a href="#" class="back-link" data-bind="click: $root.navigateToClient, tooltip: { title: 'Вернуться назад', placement: 'bottom', trigger: 'hover' }"><i class="glyphicon glyphicon-circle-arrow-left"></i></a>
    <h2>Редактирование информации о покупателе</h2>
</div>
<form class="form-horizontal">
    <div class="form-group">
        <label for="lastName" class="col-sm-2 control-label">Фамилия</label>
        <div class="col-sm-10">
            <input class="form-control" id="lastName" data-bind="value: lastName">
        </div>
    </div>
    <div class="form-group">
        <label for="firstName" class="col-sm-2 control-label">Имя</label>
        <div class="col-sm-10">
            <input class="form-control" id="firstName" data-bind="value: firstName">
        </div>
    </div>
    <div class="form-group">
        <label for="middleName" class="col-sm-2 control-label">Отчество</label>
        <div class="col-sm-10">
            <input class="form-control" id="middleName" data-bind="value: middleName">
        </div>
    </div>
    <div class="form-group">
        <label for="phone" class="col-sm-2 control-label">Телефон</label>
        <div class="col-sm-10">
            <div class='input-group'>
                <input type='text' id='phone' class="form-control" data-bind="value: phone" />
                <span class="input-group-addon">
                    <i class="fa fa-phone" aria-hidden="true"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn create-link" data-bind="click: save"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Сохранить</button>
        </div>
    </div>
</form>
